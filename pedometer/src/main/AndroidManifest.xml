<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mueller.mobileSports.pedometer.MainActivity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the height text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
<!--Hello-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:theme="@style/SplashTheme"
            android:name="com.mueller.mobileSports.general.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mueller.mobileSports.general.LoginActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.mueller.mobileSports.pedometer.PedometerActivity"
            android:label="Pedometer" />
        <activity
            android:name="com.mueller.mobileSports.general.SettingsActivity"
            android:label="Settings" />
        <activity
            android:name="com.mueller.mobileSports.general.ProfileActivity"
            android:label="Edit Profile" />
        <activity
            android:name="com.mueller.mobileSports.general.RegisterActivity"
            android:label="Register" />
        <activity
            android:name="com.mueller.mobileSports.general.StatisticsActivity"
            android:label="@string/title_activity_statistics" />
        <activity android:name="com.mueller.mobileSports.heartRate.HeartRateActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>