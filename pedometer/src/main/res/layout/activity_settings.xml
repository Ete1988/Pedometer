<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.mueller.mobileSports.general.SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stepGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_goal"
            android:textAlignment="textStart"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />


        <TextView
            android:id="@+id/stepGoalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="30sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/goalSelector"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setActivityLevelDialog"
            android:text="@string/set_activity_level"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/activity_level"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="30sp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/levelSelector"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:onClick="setGoalDialog"
            android:text="@string/set_goal"
            android:textSize="12sp" />


    </LinearLayout>

    <include
        layout="@layout/activity_generic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_saveChangesSettings"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@android:color/black" />

</LinearLayout>
