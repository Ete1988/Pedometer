<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context="com.mueller.mobileSports.general.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editProfileButton"
        android:text="@string/accountDetails"
        android:onClick="onClick"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/levelSelector"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="Step goal:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepGoal"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="textStart" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepGoalView"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/stepGoal"
        android:layout_marginLeft="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/actLevel"
        android:layout_marginLeft="160dp"
         />

    <Button
        android:text="@string/set_activity_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalSelector"
        android:onClick="setActivityLevelDialog"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="12sp"
        android:layout_below="@+id/level"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/activity_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actLevel"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/levelSelector"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Set goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelSelector"
        android:onClick="setGoalDialog"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="12sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/stepGoalView"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
