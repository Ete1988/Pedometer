<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.mueller.mobileSports.pedometer.PedometerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <RelativeLayout
        android:id="@+id/timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar">

        <ImageView
            android:id="@+id/iv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeTextView"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/iv_start_stop"
            android:contentDescription="@string/emptyString"
            app:srcCompat="@mipmap/ic_reset" />

        <ImageView
            android:id="@+id/iv_start_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeTextView"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/emptyString"
            app:srcCompat="@mipmap/ic_start" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="@string/default_timer"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="normal|bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timer_layout"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/txtAverageHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtHeartRate"
            android:layout_below="@+id/txtHeartRate"
            android:layout_marginTop="13dp"
            android:text="@string/average"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtMinHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtAverageHR"
            android:layout_below="@+id/txtAverageHR"
            android:text="@string/minimum"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtMaxHR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtMinHR"
            android:layout_below="@+id/txtMinHR"
            android:text="@string/maximum"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtAvrHRView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtMinHR"
            android:layout_centerHorizontal="true"
            android:text="@string/standardValue" />

        <TextView
            android:id="@+id/txtMinHRView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtMaxHR"
            android:layout_alignStart="@+id/txtAvrHRView"
            android:text="@string/standardValue" />

        <TextView
            android:id="@+id/txtMaxHRView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtMaxHR"
            android:layout_centerHorizontal="true"
            android:text="@string/standardValue" />

        <TextView
            android:id="@+id/txtHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/heart_rate"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/HeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtAvrHRView"
            android:text="@string/standardValue"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/test_btn"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtMaxHR"
            android:layout_below="@+id/txtMaxHR"
            android:layout_marginTop="22dp"
            android:text="@string/start_monitoring" />


    </RelativeLayout>

    <include
        android:id="@+id/bottombar"
        layout="@layout/bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>